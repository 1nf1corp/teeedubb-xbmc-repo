<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.hyper.launcher" name="Hyper Launcher Service" version="1.0.0" provider-name="teeedubb">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="plugin.hyper.launcher" version="0.0.1"/>
  </requires>
  <extension point="xbmc.service"
             library="default.py" start="startup">
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en"></summary>
    <description lang="en">Plays the trailer of the selected item in the background after a defined idle time and will can reload prior windows on startup.</description>
  </extension>
</addon>