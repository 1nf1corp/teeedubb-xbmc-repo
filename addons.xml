<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.teeedubb" name="teeedubb's repo" version="1.0.0" provider-name="teeedubb">
	<extension point="xbmc.addon.repository" name="teeedubb's repo">
		<info compressed="false">https://github.com/teeedubb/teeedubb-xbmc-repo/raw/master/addons.xml</info>
		<checksum>https://github.com/teeedubb/teeedubb-xbmc-repo/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/teeedubb/teeedubb-xbmc-repo/raw/master</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>teeedubb's repo</summary>
		<description>Addons by teeedubb.</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>

<addon id="script.steam.launcher" name="Steam" version="0.9.3" provider-name="teeedubb">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py">
     <provides>game executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Launches Steam in Big Picture mode from within XBMC.</summary>
    <description lang="en">Launches Steam from within XBMC - It will close XBMC, launch Steam in Big Picture mode and when Steam is exited XBMC will restart. Steam also comes with a full featured web browser than can be controlled with a game pad or remote and plays back flash content. It works with Windows, Linux and quite possibly OSX, but this hasn't been tested. See  for more info</description>
    <platform>linux windx osx</platform>
    <language>en</language>
    <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
    <forum>http://forum.xbmc.org/showthread.php?tid=157499</forum>
    <website>http://forum.xbmc.org/showthread.php?tid=157499</website>
    <source>https://github.com/teeedubb</source>
    <email></email>
    </extension>
</addon>

<addon id="script.audio.party.mode.start" name="Music Party Mode" version="0.1.2" provider-name="teeedubb">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py">
     <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Launches music Party Mode.</summary>
    <description lang="en">Launches Party Mode, waits for X seconds then switches to full screen visualisation and optionally toggles the fullscreen music info after X seconds. Timeouts can be configured in addon settings, defaults are 5 seconds for each.</description>
    <platform>all</platform>
    <language>en</language>
    <forum>http://forum.xbmc.org/showthread.php?tid=166842</forum>
    <website>http://forum.xbmc.org/showthread.php?tid=166842</website>
    <source>https://github.com/teeedubb</source>
    <email></email>
  </extension>
</addon>
</addons>
